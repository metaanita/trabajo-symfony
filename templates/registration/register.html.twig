{% extends 'base.html.twig' %}

{% block title %}Registro - Mi trabajo-symfony{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center">Registro</h1>
                </div>
                <div class="card-body">
                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Correo electrónico', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Ingresa tu correo electrónico'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Ingresa tu contraseña'}}) }}
                        </div>
                        <div class="form-check mb-3">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>

                        {# Agregar el campo CSRF token #}
                        {{ form_widget(registrationForm._token) }}

                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
